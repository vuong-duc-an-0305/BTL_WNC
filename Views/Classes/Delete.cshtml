@model OnlineClassManagement.Models.Class

@{
    ViewData["Title"] = "Xóa lớp học";
}

<h1>Xóa lớp học</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa lớp học này không?</h3>
<div>
    <h4>@Model.ClassName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Mã lớp</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.ClassCode)</dd>
        
        <dt class = "col-sm-2">Học kỳ</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Semester)</dd>
        
        <dt class = "col-sm-2">Năm học</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.AcademicYear)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassId" />
        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
    </form>
</div>